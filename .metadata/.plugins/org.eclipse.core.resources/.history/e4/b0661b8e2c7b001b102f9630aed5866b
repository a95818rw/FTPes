package ftps;

import java.io.BufferedOutputStream;
import java.io.File;
import java.io.FileOutputStream;
import java.io.IOException;
import java.io.OutputStream;
import java.net.SocketException;

import org.apache.commons.net.ftp.FTP;
import org.apache.commons.net.ftp.FTPClient;
import org.apache.commons.net.ftp.FTPFile;
import org.apache.commons.net.ftp.FTPSClient;

public class main {
	
	FTPSClient ftpsClient = new FTPSClient();
	
	private static void download(FTPSClient ftpClient, String target) throws IOException {		
		getPath(ftpClient, target);
		
	}
	
	private static void getPath(FTPSClient ftpClient, String target) throws IOException {
		ftpClient.changeWorkingDirectory(target);
		FTPFile[] files = ftpClient.listFiles();
		
		for (FTPFile ftpFile : files) {
			System.out.println(ftpFile.getName());
		}
	}
	
	public static void main(String[] args) {
		// TODO Auto-generated method stub

		String target = "/test";
		String downloadpath = "D:/temp";
		String ip = "10.253.46.102";
		int port = 990;
		String user = "client1";
		String pw = "c1234567890";
		
		
		
		try {
			ftpsClient.connect(ip, port);
			ftpsClient.execPBSZ(0);
			ftpsClient.execPROT("P");
			ftpsClient.login(user, pw);
			ftpsClient.setFileType(FTP.BINARY_FILE_TYPE);
			ftpsClient.changeWorkingDirectory("/test");//改變當前路徑
			ftpsClient.connect(ip);
			ftpsClient.login(user, pw);
			
			download(ftpsClient, target);
		
			ftpsClient.logout();
		} catch (SocketException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
	}

}

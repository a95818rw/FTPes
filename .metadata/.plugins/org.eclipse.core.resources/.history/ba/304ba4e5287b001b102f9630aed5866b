        String user = "client1";
        String pass = "c1234567890";
 
        FTPSClient ftpClient = new FTPSClient("TLS", true);
        try {
        	ftpClient.execPBSZ(0);
        	ftpClient.execPROT("P");
            ftpClient.connect(server, port);
            ftpClient.login(user, pass);
            
